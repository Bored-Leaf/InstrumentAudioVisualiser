{
    "version": 8,
    "configurePresets": [
        {
            "name": "Clang 21.1.0 x86_64-pc-windows-msvc",
            "displayName": "Clang 21.1.0 x86_64-pc-windows-msvc",
            "description": "Using compilers for windows",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "C:/Program Files/LLVM/bin/clang.exe",
                "CMAKE_CXX_COMPILER": "C:/Program Files/LLVM/bin/clang++.exe",
                "CMAKE_CXX_FLAGS": "-std=c++20 -Wall -Wextra",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }, 
        {
            "name": "Clang 21.1.8 Linux",
            "displayName": "Clang 21.1.8 Linux",
            "description": "Using compilers for Linux",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/clang-21",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-21",
                "CMAKE_CXX_FLAGS": "-std=c++20 -Wall -Wextra",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}